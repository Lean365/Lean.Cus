<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt">

  <!-- 启用ASP.NET Core布局渲染器 -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- 日志输出目标 -->
  <targets>
    <!-- 文件日志 -->
    <target xsi:type="File" name="allfile" 
            fileName="logs/${shortdate}/all.log"
            layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

    <!-- 错误日志 -->
    <target xsi:type="File" name="error" 
            fileName="logs/${shortdate}/error.log"
            layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}" />

    <!-- SQL日志 -->
    <target xsi:type="File" name="sqllog" 
            fileName="logs/${shortdate}/sql.log"
            layout="${longdate}|${uppercase:${level}}|${message}" />

    <!-- 控制台日志 -->
    <target xsi:type="ColoredConsole" name="console">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
      <layout type="SimpleLayout">
        <text>[${longdate}] ${pad:padding=5:inner=${level:uppercase=true}} ${logger}: ${message} ${exception:format=tostring}</text>
      </layout>
    </target>
  </targets>

  <!-- 日志规则 -->
  <rules>
    <!-- SQL日志 -->
    <logger name="SqlSugar.CodeFirst" minlevel="Trace" writeTo="sqllog,console" final="false" />

    <!-- 错误日志 -->
    <logger name="*" minlevel="Error" writeTo="error" final="false" />

    <!-- 所有日志 -->
    <logger name="*" minlevel="Info" writeTo="allfile,console" final="false" />

    <!-- 排除一些不必要的微软日志 -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
  </rules>
</nlog> 